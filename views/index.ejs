<%- include ("header") -%>
<!-- Title section - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

<div id="title-background" class="pagePadding">

  <div class="container-fluid" id="title-content">
    <!-- Title -->

    <div class="row">
      <div class="col-lg-12">
        <h1>Cloud Vortex Games</h1>
        <hr>
        <p class="pSubtitle">Support for indie developers !</p>
        <a href="https://cloudvortexgames.itch.io/" class="btn btn-outline-dark btn-lg download-button btnPixel" role="button"><i class="fab fa-itch-io"></i> Itch.io </a>
        <button type="button" class="btn btn-outline-dark btn-lg download-button btnPixel"><i class="fab fa-unity"></i> Unity Asset Store</button>
      </div>

    </div>

  </div>

</div>


<!-- Accordion beginning - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

<div id="accordion">

  <!-- First accordion card button - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -   -->
  <div class="card cardbg">
    <div class="card-header " id="headingOne">
      <h5 class="mb-0">
        <button class="btn btn-dark btn-lg btn-block collapsed btnCustom" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          About
        </button>
      </h5>
    </div>

    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body">

        <!-- About Section card1 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
        <section id="about">
          <h2>Greetings, Friend</h2>
          <hr>
          <p class="blocktext"> Cloud Vortex Games prides itself on creating high-quality video game content that developers
            can use to make their project ideas a reality. From 2D pixel art to content generation software,
            there is something here for any type of developer. Have a look at our collection of game assets
            and choose something to incorporate into your project today!</p>
        </section>

      </div>
    </div>
  </div>

  <!-- Second accordion card button - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -   -->
  <div class="card cardbg">
    <div class="card-header " id="headingTwo">
      <h5 class="mb-0">
        <button class="btn btn-dark btn-lg btn-block collapsed btnCustom" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Recent Assets
        </button>
      </h5>
    </div>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">

      <!-- Second accordion card body - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -   -->
      <div class="card-body">
        <!-- Assets Section ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

        <section id="testimonials">
          <div class="container">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <!-- <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              </ol> -->
              <div class="carousel-inner">
                <div class="carousel-item active">

                  <img class="testimonial-image" src=<%= imgSource %> alt="">

                  <a href=<%= itchLinks[0] %> class="btn btn-outline-dark btn-lg download-button btnPixel" role="button"><i class="fab fa-itch-io"></i> Itch.io </a>
                  <button type="button" class="btn btn-outline-dark btn-lg download-button"><i class="fab fa-unity"></i> Unity Asset Store</button>

                </div>
                <div class="carousel-item">

                  <img class="testimonial-image" src=<%= imgSource2 %> alt="">

                  <a href=<%= itchLinks[1] %> class="btn btn-outline-dark btn-lg download-button btnPixel" role="button"><i class="fab fa-itch-io"></i> Itch.io </a>
                  <button type="button" class="btn btn-outline-dark btn-lg download-button"><i class="fab fa-unity"></i> Unity Asset Store</button>

                </div>

              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>



        </section>
      </div>
    </div>
  </div>
  <!-- Third accordion card button - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -   -->
  <div class="card cardbg">
    <div class="card-header " id="headingThree">
      <h5 class="mb-0">
        <button class="btn btn-dark btn-lg btn-block collapsed btnCustom" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Contact us
        </button>
      </h5>
    </div>
    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
      <div class="card-body">
        <section id="contacts">
          <h2>Get In Touch</h2>
          <p>Have any questions or requests? We would love to hear from you!</p>
          <hr>
          <div class="container bordered">
            <div class="row contacts-size">

              <div class="col-lg-6 col-md-6 col-sm-12 feature-box bordered">
                <img class="testimonial-image contactsImage" src="/image/mail.png" alt="">
                <a>cloud.vortex.games@gmail.com</a>
              </div>

              <div class="col-lg-6 col-md-6 col-sm-12 feature-box bordered">
                <img class="testimonial-image contactsImage" src="/image/ig.png" alt="">
                <a href="https://www.instagram.com/cloud.vortex.games/">Instagram</a>
              </div>

              <div class="col-lg-6 col-md-6 col-sm-12 feature-box bordered">
                <img class="testimonial-image contactsImage" src="/image/fb.png" alt="">
                <a href="https://www.facebook.com/Cloud-Vortex-Games-114079660353045">Facebook</a>
              </div>

              <div class="col-lg-6 col-md-6 col-sm-12 feature-box bordered">
                <img class="testimonial-image contactsImage" src="/image/twitter.png" alt="">
                <a href="https://twitter.com/CloudVortexGame">Twitter</a>
              </div>

            </div>

          </div>
          <br>
          <hr>
        </section>


      </div>
    </div>
  </div>
</div>


<!-- Accordion ending - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

